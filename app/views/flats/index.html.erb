<div class="d-flex flex-wrap">
  <% @flats.each_with_index do |flat, index| %>
    <div class="card m-2 shadow p-3 mb-5 bg-body rounded" style="width: 300px;">
      <img src="<%= asset_path("flat#{index + 1}.jpeg") %>" alt="flat picture" class="card-img-top">
      <div class='card-body'>
        <h5 class='card-title'><%= flat.name %></h5>
        <p class='card-text'>Address: <%= flat.address %></p>
        <p class='card-text'>Description: <%= flat.description %></p>
        <div class="d-flex justify-content-between">
          <p><i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %></p>
          <p><i class="fa-solid fa-users"></i>: <%= flat.number_of_guests %></p>
        </div class='bg-ligth'>
        <%= link_to 'more info', flat_path(flat), class: "btn btn-primary mt-2"  %>
        <%= link_to 'edit', edit_flat_path(flat), class: "btn btn-success mt-2"  %>
        <%= link_to 'remove', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger mt-2"   %>
      </div>
    </div>
  <% end %>
</div>
